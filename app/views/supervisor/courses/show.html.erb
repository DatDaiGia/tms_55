<div id="courses">
  <div class="tt-main">
    <div class="tt-content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-12 col-sm-8">
            <div class="tt-course">
              <div class="tt-course-summary">
                <h3><%= @course.name %></h3>
                <p> <%= t ".name" %> <%= @course.description %></p>
                <p> <%= t ".start_date" %> <%= @course.start_date %></p>
                <p> <%= t ".end_date" %> <%= @course.end_date %></p>
                <p> <%= t ".status" %> <%= @course.status %></p>
                <div class="pull-right">
                  <% unless @course.finished?%>
                    <p><%= link_to t(".add_supervisor_to_course"),
                      edit_supervisor_course_assign_trainers_path(@course) %></p>
                    <p><%= link_to t(".add_trainee_to_course"),
                      edit_supervisor_course_assign_trainees_path(@course) %></p>
                  <% end %>
                  <div class="btn-group pull-right">
                    <% if @course.pending? %>
                      <%= form_for [:supervisor, @course] do |f| %>
                        <%= f.hidden_field :status, value: :starting %>
                        <%= f.submit t(".start_course") %>
                      <% end %>
                    <% elsif @course.starting? %>
                      <%= form_for [:supervisor, @course] do |f| %>
                        <%= f.hidden_field :status, value: :finished %>
                        <%= f.submit t(".finish_course") %>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="tt-subject task_info">
                <h3><%= t ".list_subject_in_course" %></h3>
                <% if @course_subjects.count == 0 %>
                  <div class="inform">
                    <p><%= t ".inform" %></p>
                  </div>
                <% else %>
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <td class="style"><%= t".name" %></td>
                        <td class="style"><%= t".status" %></td>
                      </tr>
                    </thead>
                    <% @course_subjects.each do |course_subject| %>
                      <tr>
                        <td><%= course_subject.subject.name %></td>
                        <td><%= course_subject.status %></td>
                      </tr>
                    <% end %>
                  </table>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-4">
            <div class="tt-trainee">
              <h3><%= t ".trainee_in_course" %></h3>
              <div class="tt-trainee-list">
                <% @course.users.trainee.each do |trainee| %>
                  <div class="media">
                    <div class="media-body">
                      <h6 class="media-heading">
                        <%= link_to trainee.name,
                          user_path(trainee) %></h6>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="tt-trainer">
              <h4><%= t ".trainer_in_course" %></h4>
              <div class="tt-trainer-list">
                <% @course.users.supervisor.each do |supervisor| %>
                  <div class="media">
                    <div class="media-body">
                      <h6 class="media-heading">
                        <%= link_to supervisor.name,
                          user_path(supervisor) %></h6>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
