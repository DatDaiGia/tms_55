<% unless @user.correct_user? current_user %>
  <div id="follow_form">
    <% if current_user.following_other_user? @user %>
      <%= form_for current_user.active_relationships.find_by(following_id: @user.id),
        html: {method: :delete}, remote: true do |f| %>
        <%= f.submit t(".unfollow"), class: "btn" %>
      <% end %>
    <% else %>
      <%= form_for current_user.active_relationships.build, remote: true do |f| %>
        <div><%= hidden_field_tag :following_id, @user.id %></div>
        <%= f.submit t(".follow"), class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>
<% end %>
